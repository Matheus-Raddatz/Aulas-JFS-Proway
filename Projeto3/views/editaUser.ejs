<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div class="container">
        <h1 class="text-center"><%= title %></h1>
        <hr>
        <form action="/users/editar/<%= user.id %>" method="post">
            <input class="form-control mb-2" type="text" name="id" value="<%= user.id %>" disabled>
            <input class="form-control mb-2" type="text" name="nome" placeholder="Informe o novo nome" value="<%= user.nome %>">
            <input class="form-control mb-2" type="text" name="email" placeholder="Informe o novo email" value="<%= user.email %>">
            <button class="btn btn-primary">Finalizar</button>
            <a href="/" class="btn btn-info">Home</a>
        </form>
    </div>
  </body>
</html>
